# =============================================================================
# CryptoLens Configuration
# =============================================================================

# Environment: development | production
FLASK_ENV=development
FLASK_APP=run.py

# Secret Key (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this

# =============================================================================
# Database Configuration
# =============================================================================
# Option 1: Use split variables (recommended)
# Option 2: Use DATABASE_URL directly (takes precedence if set)

# --- Development Database ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=cryptolens

# --- Production Database ---
# These are used when FLASK_ENV=production or ENV=production
# PROD_DB_HOST=your-prod-host.com
# PROD_DB_PORT=3306
# PROD_DB_USER=cryptolens_user
# PROD_DB_PASS=secure-password-here
# PROD_DB_NAME=cryptolens_prod

# --- Alternative: Direct URL (overrides split config) ---
# DATABASE_URL=mysql+pymysql://user:pass@localhost:3306/cryptolens

# --- Test Database ---
# TEST_DB_HOST=localhost
# TEST_DB_PORT=3306
# TEST_DB_USER=root
# TEST_DB_PASS=
# TEST_DB_NAME=cryptolens_test

# =============================================================================
# Redis Cache (optional - improves performance)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Notifications
# =============================================================================
NTFY_TOPIC=cryptolens-signals
NTFY_PRIORITY=4
# Optional: Self-hosted NTFY server (defaults to https://ntfy.sh)
# NTFY_URL=https://ntfy.sh

# =============================================================================
# Application URL
# =============================================================================
APP_URL=http://localhost:5000

# =============================================================================
# Email (for verification & password reset)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# =============================================================================
# Scanner Settings
# =============================================================================
SCAN_INTERVAL_MINUTES=5

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
# LOG_LEVEL=INFO
# Log format: colored, json, simple
# LOG_FORMAT=colored

# =============================================================================
# Security (Required for production)
# =============================================================================
# Encryption key for sensitive data (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# ENCRYPTION_KEY=
# Encryption salt (generate with: python -c "import secrets; print(secrets.token_hex(16))")
# ENCRYPTION_SALT=

# =============================================================================
# API Settings
# =============================================================================
# Allow API endpoints without authentication (NOT recommended for production)
# ALLOW_UNAUTHENTICATED_API=false

# =============================================================================
# Scheduler
# =============================================================================
# Enable the APScheduler for background jobs
# SCHEDULER_ENABLED=false

# =============================================================================
# Gunicorn (Production)
# =============================================================================
# Number of worker processes (default: cpu_count * 2 + 1)
# GUNICORN_WORKERS=4

# =============================================================================
# Payment Providers
# =============================================================================

# LemonSqueezy (Fiat Payments)
LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_WEBHOOK_SECRET=
LEMONSQUEEZY_STORE_ID=
LEMONSQUEEZY_PRO_MONTHLY_VARIANT=
LEMONSQUEEZY_PRO_YEARLY_VARIANT=
LEMONSQUEEZY_PREMIUM_MONTHLY_VARIANT=
LEMONSQUEEZY_PREMIUM_YEARLY_VARIANT=
LEMONSQUEEZY_LIFETIME_VARIANT=

# NOWPayments (Crypto Payments)
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_IPN_SECRET=
